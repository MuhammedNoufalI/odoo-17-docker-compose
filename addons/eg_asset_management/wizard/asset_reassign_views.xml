<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_asset_reassign_wizard_form" model="ir.ui.view">
        <field name="name">view.asset.reassign.wizard.form</field>
        <field name="model">asset.reassign.wizard</field>
        <field name="arch" type="xml">
            <form string="Final VAT Information">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date_from"/>
                            <field name="date_till"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button class="oe_highlight" name="action_asset_reassign" string="Update"
                            type="object"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_asset_reassign_wizard" model="ir.actions.act_window">
        <field name="name">asset.reassign</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.reassign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>