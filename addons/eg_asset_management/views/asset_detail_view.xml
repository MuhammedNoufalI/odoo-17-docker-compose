<odoo>
    <record id="asset_detail_tree_view" model="ir.ui.view">
        <field name="name">asset.detail.tree.view</field>
        <field name="model">asset.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
                <field name="asset_model"/>
                <field name="employee_id"/>
                <field name="location_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="asset_detail_form_view" model="ir.ui.view">
        <field name="name">asset.detail.form.view</field>
        <field name="model">asset.detail</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="confirm_asset" string="Confirm" class="btn-primary" type="object"
                            invisible="state  in 'active'"/>
                    <button name="scrap_asset" string="Scrap" class="btn-primary" type="object"
                            invisible="state not in 'active'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,release,active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Asset Name"/>
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category_id" options="{'no_create_edit': True, 'no_create': True}" required="1"/>
                            <field name="asset_code" readonly="1"/>
                            <field name="asset_model"/>
                            <field name="asset_brand"/>
                            <field name="serial_no"/>
                        </group>
                        <group>
                            <field name="purchase_date"/>
                            <field name="purchase_value"/>
                            <field name="location_id" options="{'no_create_edit': True, 'no_create': True}" required="1"/>
<!--                            <field name="file_data" filename="file_name"/>-->
                        </group>
                        <group string="Asset Management">
                            <field name="employee_id" readonly="state == 'active'"
                                   options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="date_from" readonly="state == 'active'"/>
                            <field name="date_till"/>
                            <button name="%(action_asset_reassign_wizard)d" string="Reassign" class="btn-primary"
                                    type="action"
                                    invisible="state not in 'active'"/>
                            <button name="release_asset" string="Release" class="btn-primary" type="object"
                                    invisible="state not in 'active'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Warranty">
                            <group>
                                <group>
                                    <field name="vendor_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="warranty_start"/>
                                    <field name="warranty_end"/>
                                </group>
                            </group>
                        </page>
                        <page string="Asset History">
                            <field name="history_ids" options="{'no_create_edit': True, 'no_create': True}">
                                <tree string="Asset History" delete="false" create="false" editable="none">
                                    <field name="employee_id" readonly="1"/>
                                    <field name="date_from" readonly="1"/>
                                    <field name="date_till" readonly="1"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Configuration">
                            <field name="spec_ids">
                                <tree string="Asset Specifications" editable="bottom">
                                    <field name="name"/>
                                    <field name="specification"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"
                           options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_asset_detail" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">asset.detail</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="main_menu_asset" name="Asset" parent="main_menu_assets" sequence="1"/>
    <menuitem id="menu_asset_detail" action="action_asset_detail" parent="main_menu_asset"/>
</odoo>
